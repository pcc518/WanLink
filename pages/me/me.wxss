/* pages/me/me.wxss */
.me_container {
  display: flex;
  flex-direction: column;
  background-color:white;
  height: 100%;
  align-content: center;
  /* overflow: hidden; */
  margin-bottom: 20px;
  margin-top: 40px;
}
.company {
  display: flex;
  flex-direction: row;
  align-content: center;
  margin-top: 1px;
  background-color:rgba(255, 166, 0, 0.7);
  /* margin-bottom: 5px; */
  height: 45px;
}
.company_logo {
  /* display: flex; */
  width: 30px;
  height: 30px;
  /* padding: 10px; */
  margin-left: 10px;
  border-radius: 50%;
  border: 0.5px white solid;
  background-color: white;
  /* 上下居中 */
  align-self: center;
}
.company_des {
  align-content: flex-start;
  margin: auto;
  margin-right: 10px;
  font-size: 13px;
  color: white;
}
.tip {
  height: 25px;
  width: 25px;
  align-self: center;
}
.header {
  position: relative;
  width: 100%;
  /* margin-top: 40px; */
  height: 0;
  padding-top: 80%;
}
.QRcode {
  position: absolute;
  /* margin-left: 20px;
  margin-right: 20px; */
  top: 0;
  left: 0;
  margin: 10%;
  height: 80%;
  width: 80%;
}
.QRdes {
  display: block;
  width: 100%;
  font-size: 15px;
  text-align: center;
}